@inject HttpClient Http
@inject ExamineService _examineService
@inject ToastService ToastService
@inject NavigationManager NavigationManager
@inject IAppHelper _appHelper
@inject IJSRuntime JS
@inject DialogService DialogService
@inject IDataCacheService _dataCatcheService

@if (string.IsNullOrWhiteSpace(Model.Name) == false)
{
    <TitleTip Title="@(Model.Name)" Description="@Model.BriefIntroduction" Image="@Model.MainPicture"></TitleTip>
}
else
{
    <TitleTip></TitleTip>
}
@if (string.IsNullOrWhiteSpace(Model.SmallBackgroundPicture) == false)
{
    <div id="web_bg" style="background-image: url(@Model.SmallBackgroundPicture)" class="d-none  bg-d-lg-block bgimage-ison "></div>
}
<CnGalWebSite.Shared.AppComponent.Pages.Entries.Normal.HeadBar Title="@Model.Name"
                                                               OnEdit="@(() => NavigationManager.NavigateTo("/articles/editarticle/" + Model.Id))" CanEdit="CanEdit" ClassName="" />

<div style="margin-top: 45px; width: 100%;margin-bottom:65px; " @onclick="@(() => articleFooter.UnRelyComment())">
    @if (isReady)
    {
        if (isNotFound)
        {
            <CnGalWebSite.Shared.AppComponent.Normal.Errors.NotFountCard EntryName="@Id" Type="未找到文章" />
        }
        else
        {
            <div class="ms-3 me-3 pt-2">
                <CnGalWebSite.Shared.AppComponent.Pages.Articles.HeadCard Model="Model" UserInfor="UserInfor" />
                <div class="mt-4">
                    @if (string.IsNullOrWhiteSpace(Model.OriginalAuthor) == false && string.IsNullOrWhiteSpace(Model.OriginalLink) == false)
                    {
                        <div class="mb-2">
                            原文链接：<a href="@Model.OriginalLink" class="alert-link" style="word-wrap: break-word;word-break:break-all;" target="_blank">@Model.OriginalLink</a>
                            <br />
                            原文作者：@Model.OriginalAuthor
                        </div>
                        <hr />
                    }

                    <CnGalWebSite.Shared.AppComponent.Normal.Texts.MarkdownView Text="@Model.MainPage" />
                    <CnGalWebSite.Shared.AppComponent.Pages.Articles.ListTagCard Relevances="Model.Relevances" />
                </div>
                <div class=" mt-4">
                    <CnGalWebSite.Shared.AppComponent.Normal.Comments.ListComment ObjectId="@Model.Id" Type="CommentType.CommentArticle" CanDeleted="CanEdit" OnRelying="@((a)=>articleFooter.RelyComment(a.UserName,a.CommentId))" @ref="comments" />
                </div>
            </div>
        }
    }
    else
    {
        <CnGalWebSite.Shared.AppComponent.Normal.Loading.LoadingTip />
    }
</div>
@if (isNotFound == false && isReady == true)
{
    <CnGalWebSite.Shared.AppComponent.Pages.Articles.ArticleFooter @ref="articleFooter" Image="@Model.MainPicture" RelyCallBack="RefreshComment"
                                                                   ArticleId="@Model.Id" ArticleName="@Model.Name" BriefIntroduction="@Model.BriefIntroduction" />
}

@code {
    private string id = "";
    [Parameter]
    public string Id
    {
        get
        {
            return id;
        }
        set
        {
            id = value;
            isReady = false;
            if (isFirstLoad == false)
            {
                OnReLoad();
            }
        }
    }

    private int defaultIndex { get; set; } = 0;
    [Parameter]
    public string DefaultIndex
    {
        get
        {
            return defaultIndex.ToString();
        }
        set
        {
            try
            {
                defaultIndex = int.Parse(value);
            }
            catch
            {
                defaultIndex = 0;
            }
        }
    }

    bool isReady = false;
    bool isNotFound = false;
    bool isFirstLoad = true;
    public CnGalWebSite.Shared.AppComponent.Pages.Articles.ArticleFooter articleFooter;
    public CnGalWebSite.Shared.AppComponent.Normal.Comments.ListComment comments;

    public bool CanEdit { get; set; }
    public ArticleViewModel Model { get; set; } = new ArticleViewModel
    {
        Relevances = new List<RelevancesViewModel>(),
        MainPage = "# 123",
        Name = "CnGal_中文GalGame资料站"
    };
    public UserInforViewModel UserInfor { get; set; } = new UserInforViewModel { Ranks = new List<RankViewModel>() };
    string LastLookName = "";

    [CascadingParameter]
    private Task<AuthenticationState> authenticationStateTask { get; set; }

    [CascadingParameter]
    public ErrorHandler ErrorHandler { get; set; }


    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await base.OnAfterRenderAsync(firstRender);
        if (firstRender)
        {

            isFirstLoad = false;
        }

    }

    async Task OnReLoad()
    {
        await OnInitializedAsync();
        await OnAfterRenderAsync_();
    }

    public async Task RefreshComment()
    {
        if (comments != null)
        {
            await comments.Refresh();

        }
    }

    async Task OnAfterRenderAsync_()
    {

        //记录数据
        if (Model.Name != LastLookName && string.IsNullOrWhiteSpace(Model.Name) == false)
        {
            LastLookName = Model.Name;
            try
            {
                await JS.InvokeAsync<string>("trackEvent", "文章", "浏览", Model.Name, "1", "look");
            }
            catch (Exception exc)
            {

            }
        }

        //判断是否为动态
        await RedirectNews();
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var user = await authenticationStateTask;
            CanEdit = user.User.IsInRole("Editor");
            if (user.User.Identity.Name == Model.LastEditUserName || user.User.Identity.Name == Model.CreateUserName)
            {
                CanEdit = true;
            }

            isReady = false;
            isNotFound = true;

            Model = await _dataCatcheService.ArticleIndexPageCatche.GetCatche(Id);

            //判断如果名称为空则返回主页
            if (string.IsNullOrWhiteSpace(Model.Name))
            {
                NavigationManager.NavigateTo("/home");
            }

            UserInfor = await Http.GetFromJsonAsync<UserInforViewModel>(ToolHelper.WebApiPath + "api/space/GetUserData/" + Model.UserId);


            isReady = true;
            isNotFound = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            ErrorHandler.ProcessError(ex, "获取文章失败");
            isReady = true;
            isNotFound = true;
            StateHasChanged();
        }

    }


    public async Task RedirectNews()
    {
        try
        {
            if (Model.Type == ArticleType.News && string.IsNullOrWhiteSpace(Model.OriginalLink) == false && Model.OriginalLink.Contains("cngal.org") == false)
            {
                await JS.InvokeAsync<string>("openNewPage", Model.OriginalLink);
                await JS.InvokeAsync<string>("goback");
            }

        }
        catch
        {

        }
    }
}
