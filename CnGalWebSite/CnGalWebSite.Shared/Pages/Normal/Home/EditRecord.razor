{
    <TitleTip Title="@("『"+ExaminesOverview.ObjectName+"』第" +ContrastId+"次编辑记录")" Description="@ExaminesOverview.ObjectBriefIntroduction" Image="@ExaminesOverview.Image"></TitleTip>
}

