@page "/peripheries/editmain/{Id}"
@attribute [Authorize]

@inject IDataCacheService _dataCacheService

<MakeSureInWASMTip></MakeSureInWASMTip>

@if (_dataCacheService.IsApp == true)
{
    <CnGalWebSite.Shared.Pages.Apps.Peripheries.EditMain Id="@Id" />
}
else
{
    <CnGalWebSite.Shared.Pages.Webs.Peripheries.EditMain Id="@Id" />
}

@code{
    [Parameter]
    public string Id { get; set; }
    protected override async Task OnInitializedAsync()
    {
        //清空当前缓存
        _dataCacheService.PeripheryIndexPageCatche.Clean(Id);
    }
}
