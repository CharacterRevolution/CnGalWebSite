@if (string.IsNullOrWhiteSpace(Url))
{
    <span class="@Class">
        <i class="@("font-color "+Icon)"></i>&nbsp; &nbsp;@Text
    </span>
}
else
{
    <span class="col-12" style=" word-break: break-all;">
        <i class="@("font-color "+Icon)"></i>&nbsp; &nbsp;@Text<a href="@Url" target="_blank">@Url</a>
    </span>
}

@code {
    [Parameter]
    public string Text { get; set; }
    [Parameter]
    public string Url { get; set; }
    [Parameter]
    public string Icon { get; set; }
    [Parameter]
    public string Class { get; set; }
}
