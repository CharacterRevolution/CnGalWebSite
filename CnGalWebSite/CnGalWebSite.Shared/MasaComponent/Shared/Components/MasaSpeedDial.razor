@inject IDataCacheService _dataCacheService


<MSpeedDial @bind-Value="fab" Class="@Class"
            Bottom
            Right
            Direction="@Direction"
            Style="right:0;bottom:0"
            OpenOnHover>
    <ActivatorContent>
        <MButton Color="@_dataCacheService.ThemeSetting.Theme" Dark Small Fab @attributes="@context.Attrs" OnClick="OnClick">
            <MIcon>
                @Icon
            </MIcon>
        </MButton>
    </ActivatorContent>
    <ChildContent>
       @ChildContent
    </ChildContent>
</MSpeedDial>

@code {
    [Parameter]
    public string Direction { get; set; }
    [Parameter]
    public string Icon { get; set; }
    [Parameter]
    public string Text { get; set; }
    [Parameter]
    public string Class { get; set; }
    [Parameter]
    public EventCallback OnClick { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }


    private bool fab;

}
