@inject DialogService DialogService

@if (string.IsNullOrWhiteSpace(Model.Name) == false)
{
    <TitleTip Title="@(Model.Name)" Description="@Model.BriefIntroduction" Image="@Model.MainPicture"></TitleTip>
}
else
{
    <TitleTip></TitleTip>
}

    <div>
        @if (isReady == false)
        {
                <div class="  rounded shadow-sm  ps-4 pe-4 pt-3 pb-3 bg-opacity rounded">
                    <SkeletonParagraph />
                    <hr class="m-2" />
                    <SkeletonParagraph />
                    <div class="mt-2">
                    </div>
                    <SkeletonParagraph />
                    <div class="mt-2">
                    </div>
                    <SkeletonParagraph />
                    <div class="mt-2">
                    </div>
                    <SkeletonParagraph />
                </div>
        }
        else
        {

            <div class="rounded shadow-sm bg-opacity mb-4 pb-4">
                <CnGalWebSite.Shared.Component.Articles.NewVersion.MainInforCard Model="Model"  HiddenImage/>
            </div>

        }
    </div>


@code {
    [Parameter]
    public long Id { get; set; }
    bool isReady;
    public ArticleViewModel Model { get; set; } = new ArticleViewModel();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isReady = false;
            //获取文章信息
            Model = await _dataCatcheService.ArticleIndexPageCatche.GetCatche(Id.ToString(),true);
           
            isReady = true;
            StateHasChanged();

        }
        catch (Exception exc)
        {
            isReady = false;
            StateHasChanged();
        }

    }

}
