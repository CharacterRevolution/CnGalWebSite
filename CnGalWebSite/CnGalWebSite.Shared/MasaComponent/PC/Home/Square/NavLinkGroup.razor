@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject IDataCacheService _dataCacheService

<div class="h-100">
    <div style="height:50%;" class="pb-2">
        <CnGalWebSite.Shared.MasaComponent.Shared.Components.MasaTitleContainer Title="CnGal资料站" Icon="fa fa-fw fa-anchor" Class="h-100">

            <div class="w-100">
                <MButton Text Block Color="@_dataCacheService.ThemeSetting.Theme" OnClick="@(()=>OnClick("/about"))">
                    <MIcon Left>fa fa-fw fa-info</MIcon>
                    关于我们
                </MButton>
                <MButton Text Block Color="@_dataCacheService.ThemeSetting.Theme" OnClick="@(()=>OnClick("/articles/createarticle"))">
                    <MIcon Left>fa fa-fw fa-sitemap</MIcon>
                    组织架构
                </MButton>
                <MButton Text Block Color="@_dataCacheService.ThemeSetting.Theme" OnClick="@(()=>OnClick("/tags/createtag"))">
                    <MIcon Left>fa fa-fw fa-legal</MIcon>
                    隐私政策
                </MButton>
                <MButton Text Block Color="@_dataCacheService.ThemeSetting.Theme" OnClick="@(()=>OnClick("/data"))">
                    <MIcon Left>fa fa-fw fa-line-chart</MIcon>
                    数据汇总
                </MButton>
            </div>
        </CnGalWebSite.Shared.MasaComponent.Shared.Components.MasaTitleContainer>
    </div>
    <div style="height:50%;" class="pt-2">
        <CnGalWebSite.Shared.MasaComponent.Shared.Components.MasaTitleContainer Title="标签" Icon="fa fa-fw fa-tags" Class="h-100">

            <div class="w-100">
                <MButton Text Block Color="@_dataCacheService.ThemeSetting.Theme" OnClick="@(()=>OnClick("/tags/index/1"))">
                    <MIcon Left>mdi-gamepad-square</MIcon>
                    游戏
                </MButton>
                <MButton Text Block Color="@_dataCacheService.ThemeSetting.Theme" OnClick="@(()=>OnClick("/tags/index/2"))">
                    <MIcon Left>mdi-account</MIcon>
                    角色
                </MButton>
                <MButton Text Block Color="@_dataCacheService.ThemeSetting.Theme" OnClick="@(()=>OnClick("/tags/index/3"))">
                    <MIcon Left>mdi-star</MIcon>
                    STAFF
                </MButton>
                <MButton Text Block Color="@_dataCacheService.ThemeSetting.Theme" OnClick="@(()=>OnClick("/tags/index/4"))">
                    <MIcon Left>mdi-group</MIcon>
                    制作组
                </MButton>
            </div>
        </CnGalWebSite.Shared.MasaComponent.Shared.Components.MasaTitleContainer>
    </div>
</div>

@code {
    public Task OnClick(string url)
    {
        NavigationManager.NavigateTo(url);
        return Task.CompletedTask;
    }

}
