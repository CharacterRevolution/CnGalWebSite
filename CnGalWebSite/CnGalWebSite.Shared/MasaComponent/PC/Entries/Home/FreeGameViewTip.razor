@inject IDataCacheService _dataCacheService


<TabLink Icon="fa fa-codepen" Url="@("/entries/index/" + Model.Id)" Text="@Model.Name" class="a-font-color h-100">
    <div class="rounded shadow-sm  bg-opacity h-100" style="display: flex; flex-direction: column; justify-content: space-between;">
        <div>
            <div>
                <img loading="lazy" class="img-fluid" src="@Model.MainImage" alt="@Model.Name">
            </div>
            <div class="@(_dataCacheService.IsApp?"p-2":"p-3")">
                <header class="@("text-truncate-2 "+(_dataCacheService.IsApp?"mb-1":""))">
                    <h5 class="fw-bold" style="@(" display: inline;"+(_dataCacheService.IsApp?"font-size: large;":""))">@Model.DisplayName</h5>
                </header>
                <div class="text-truncate-4" style="@(_dataCacheService.IsApp?"color: gray;font-size:small;":"")">
                    @Model.BriefIntroduction
                </div>
            </div>
        </div>
    </div>
</TabLink>



@code {
    [Parameter]
    public EntryInforTipViewModel Model { get; set; }
}
