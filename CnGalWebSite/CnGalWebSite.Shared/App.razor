@inject IDataCacheService _dataCacheService
@inject NavigationManager NavigationManager
@inject ILocalStorageService _localStorage

<BootstrapBlazorRoot >
    <CnGalWebSite.Shared.MasaComponent.Shared.CnGalRootTip>
        @if (_dataCacheService.IsMasa)
        {
            @if (_dataCacheService.IsApp == false)
            {
                <CascadingAuthenticationState>
                    <Router AppAssembly="@typeof(PCLayout).Assembly" PreferExactMatches="@true">
                        <Found Context="routeData">
                            <AuthorizeRouteView RouteData="@routeData"
                                                DefaultLayout="@typeof(PCLayout)">
                                <NotAuthorized>
                                    <NotAuthorizedTipView IsNeedLayput="true"></NotAuthorizedTipView>
                                </NotAuthorized>
                                <Authorizing>
                                    <RouteView RouteData="@routeData" DefaultLayout="@typeof(PCLayout)" />
                                </Authorizing>
                            </AuthorizeRouteView>
                        </Found>
                        <NotFound>
                            <LayoutView Layout="@typeof(PCLayout)">
                                <NotFoundError></NotFoundError>
                            </LayoutView>
                        </NotFound>
                    </Router>

                </CascadingAuthenticationState>
            }
            else if (_dataCacheService.IsApp == true)
            {
                <CascadingAuthenticationState>
                    <Router AppAssembly="@typeof(AppLayout).Assembly" PreferExactMatches="@true">
                        <Found Context="routeData">
                            <AuthorizeRouteView RouteData="@routeData"
                                                DefaultLayout="@typeof(AppLayout)">
                                <NotAuthorized>
                                    <NotAuthorizedTipView IsNeedLayput="true"></NotAuthorizedTipView>
                                </NotAuthorized>
                                <Authorizing>
                                    <RouteView RouteData="@routeData" DefaultLayout="@typeof(AppLayout)" />
                                </Authorizing>
                            </AuthorizeRouteView>
                        </Found>
                        <NotFound>
                            <LayoutView Layout="@typeof(AppLayout)">
                                <NotFoundError></NotFoundError>
                            </LayoutView>
                        </NotFound>
                    </Router>
                </CascadingAuthenticationState>
            }
        }
        else
        {
            @if (_dataCacheService.IsApp == false)
            {
                <CascadingAuthenticationState>
                    <Router AppAssembly="@typeof(MainLayout).Assembly" PreferExactMatches="@true">
                        <Found Context="routeData">
                            <AuthorizeRouteView RouteData="@routeData"
                                                DefaultLayout="@typeof(MainLayout)">
                                <NotAuthorized>
                                    <NotAuthorizedTipView IsNeedLayput="true"></NotAuthorizedTipView>
                                </NotAuthorized>
                                <Authorizing>
                                    <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
                                </Authorizing>
                            </AuthorizeRouteView>
                        </Found>
                        <NotFound>
                            <LayoutView Layout="@typeof(AccountLayout)">
                                <NotFoundError></NotFoundError>
                            </LayoutView>
                        </NotFound>
                    </Router>

                </CascadingAuthenticationState>
            }
            else if (_dataCacheService.IsApp == true)
            {
                <CascadingAuthenticationState>
                    <Router AppAssembly="@typeof(MobileLayout).Assembly" PreferExactMatches="@true">
                        <Found Context="routeData">
                            <AuthorizeRouteView RouteData="@routeData"
                                                DefaultLayout="@typeof(MobileLayout)">
                                <NotAuthorized>
                                    <NotAuthorizedTipView IsNeedLayput="true"></NotAuthorizedTipView>
                                </NotAuthorized>
                                <Authorizing>
                                    <RouteView RouteData="@routeData" DefaultLayout="@typeof(MobileLayout)" />
                                </Authorizing>
                            </AuthorizeRouteView>
                        </Found>
                        <NotFound>
                            <LayoutView Layout="@typeof(AccountLayout)">
                                <NotFoundError></NotFoundError>
                            </LayoutView>
                        </NotFound>
                    </Router>
                </CascadingAuthenticationState>
            }
        }


    </CnGalWebSite.Shared.MasaComponent.Shared.CnGalRootTip>
</BootstrapBlazorRoot>


