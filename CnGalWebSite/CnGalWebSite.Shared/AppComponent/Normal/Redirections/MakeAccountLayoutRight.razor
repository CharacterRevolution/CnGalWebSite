@inject NavigationManager NavigationManager
@inject IDataCacheService _dataCacheService

@code {
    protected override async Task OnInitializedAsync()
    {
        if (_dataCacheService.IsApp==true)
        {
            if(NavigationManager.Uri.Contains("account/apps/")==false)
            {
                NavigationManager.NavigateTo(NavigationManager.Uri.Replace("account/", "account/apps/"));
            }
        }
        else
        {
            if (NavigationManager.Uri.Contains("account/apps/"))
            {
                NavigationManager.NavigateTo(NavigationManager.Uri.Replace("account/apps/", "account/"));
            }
        }
    }
}
