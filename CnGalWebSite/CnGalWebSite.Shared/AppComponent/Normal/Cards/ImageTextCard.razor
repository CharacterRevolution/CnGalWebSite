<a class="a-font-color" style="display:flex;" href="@Model.Url">
    <div>
        <img  loading="lazy"  src="@Model.Image" alt="@Model.Name" style=" width: 130px;">
    </div>
    <div class="ms-3" style=" display: flex; flex-direction: column;justify-content: space-between;">
        <div style=" font-size: larger; -webkit-line-clamp: 1;" class="home-card-name-text">@Model.Name</div>
        <div class="home-card-name-text" style="font-size: 12px; color: gray;">@Model.Description</div>
    </div>
</a>

@code {
    [Parameter]
    public ImageTextCardModel Model { get; set; }

}
