<div class="m-3 mb-0 pt-4">
    <div style=" display: flex; flex-direction: column; align-content: center; align-items: center; ">
        <div style="display: flex;align-items: center;" class="mb-3">
            <div class="swal2-icon m-0 me-1 @("border-"+color)" style="height: 5em; width: 5em; display: flex; align-items: center;">
                <div style=" font-size: x-large;" class="@("text-"+color)">@(Model.EditCount>=1000? Model.EditCount.ToString() : Model.EditCount.ToString("0.0"))</div>
            </div>
        </div>
        <div style=" font-size: larger; ">@Model.Name</div>
        <div style=" font-size: smaller;color:gray; " class="mt-1 mb-2">
            @(Model.EditCount==0?"总计0次编辑":("最后于 "+Model.LastEditTime?.ToString("yyyy年M月d日 HH:mm")+" 编辑，总计"+Model.EditCount+"次编辑"))
        </div>
    </div>
</div>



@code {
    [Parameter]
    public UserEditInforBindModel Model { get; set; }

    string color = "success";

    protected override async Task OnInitializedAsync()
    {


    }
}
