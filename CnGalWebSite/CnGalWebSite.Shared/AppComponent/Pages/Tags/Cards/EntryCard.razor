@if (Model.Type == EntryType.Game || Model.Type == EntryType.ProductionGroup)
{
    <a class="a-font-color" style="display:flex;" href="@("/entries/index/"+Model.Id)">
        <div>
            <img src="@Model.MainImage" alt="@Model.Name" style=" width: 130px;">
        </div>
        <div class="ms-3" style=" display: flex; flex-direction: column;justify-content: space-between;">
            <div style=" font-size: larger; -webkit-line-clamp: 1;" class="home-card-name-text">@Model.Name</div>
            <div class="home-card-name-text" style="font-size: 12px; color: gray;">@Model.BriefIntroduction</div>
        </div>
    </a>
}
else
{
    <a class="a-font-color" style="display: flex; align-items: center;" href="@("/entries/index/"+Model.Id)">
        <div>
            <img src="@Model.MainImage" alt="@Model.Name" style=" width: 60px;border-radius:50%;">
        </div>
        <div class="ms-3" style=" display: flex; flex-direction: column;justify-content: space-between;">
            <div style=" font-size: larger; -webkit-line-clamp: 1;" class="home-card-name-text">@Model.Name</div>
            <div class="home-card-name-text" style="font-size: 12px; color: gray;">@Model.BriefIntroduction</div>
        </div>
    </a>
}


@code {
    [Parameter]
    public EntryInforTipViewModel Model { get; set; }

}
