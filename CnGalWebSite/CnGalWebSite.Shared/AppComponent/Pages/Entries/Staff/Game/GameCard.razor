<a class="a-font-color" style="display:flex;" href="@Model.Link">
    <div>
        <img src="@Model.Image" alt="@Model.Name" style=" width: 130px;">
    </div>
    <div class="ms-3" style=" display: flex; flex-direction: column;justify-content: space-between;">
        <div style="  font-size: larger;" class="home-card-name-text">@Model.Name</div>
        <div class="home-card-name-text" style="font-size: 12px; color: gray;">@Description</div>
    </div>
</a>

@code {
    [Parameter]
    public GameCardModel Model { get; set; }

    string Description { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Description = "职位：";
        foreach (var item in Model.Positions)
        {
            Description += (item + " ");
        }

    }


}
