@inject IDataCacheService _dataCatcheService

@if (_dataCatcheService.IsApp)
{
    <TabLink Icon="fa fa-tag" Url="@("/tags/index/" + Model.Id)" Text="@Model.Name" class="a-font-color">
        <div class="div-shadow rounded  bg-opacity h-100">
            <div style="display: flex; align-items: center;">
                <div>
                    <img loading="lazy"  style=" width: 160px; " src="@Model.MainImage" alt="@Model.Name">
                </div>
                <div class="pt-3 ps-3">
                    <header class="text-truncate-1">
                        <span class="app-card-tag">标签</span>
                        <span class="fw-bold" style=" display: inline;">@Model.Name</span>
                    </header>
                    <div class="text-truncate-2">
                        @Model.BriefIntroduction
                    </div>

                </div>
            </div>
        </div>

    </TabLink>

}
else
{
    <TabLink Icon="fa fa-tag" Url="@("/tags/index/" + Model.Id)" Text="@Model.Name" class="a-font-color">
        <div class="div-shadow rounded  bg-opacity ps-3 pe-3">
            <div class="pb-3" style="display:flex;">
                <div class="pt-3">
                    <img  loading="lazy" style=" width: 250px; " src="@Model.MainImage" alt="@Model.Name">
                </div>
                <div class="pt-3 ps-3">
                    <header  class="text-truncate-2">
                        <div class="article-home-tag">标签</div>
                        <h5 class="fw-bold" style=" display: inline;">@Model.Name</h5>
                    </header>
                    <div class="text-truncate-3">
                        @Model.BriefIntroduction
                    </div>

                </div>
            </div>
        </div>

    </TabLink>

}




@code {
    [Parameter]
    public TagInforTipViewModel Model { get; set; }
    [Parameter]
    public string ColorNum { get; set; }

