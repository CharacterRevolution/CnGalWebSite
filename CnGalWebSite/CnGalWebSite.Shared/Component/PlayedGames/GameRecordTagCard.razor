@inject IDataCacheService _dataCacheService


@if (Model.IsInSteam)
{
    <MChip Label TextColor="white" XSmall Color="@(IsDark?_dataCacheService.ThemeSetting.Theme:"light-blue")" Class="mb-2 me-2">
        <MIcon Left XSmall>mdi-steam</MIcon>
        @((Model.PlayDuration/60.0).ToString("0.0")+" 小时")
    </MChip>
}

@if (Model.IsScored&& IsDark==false)
{
    <MChip Label TextColor="white" XSmall Color="@(IsDark?_dataCacheService.ThemeSetting.Theme:"light-blue darken-3")" Class="mb-2 me-2">
        <MIcon Left XSmall>mdi-star</MIcon>
        @((Model.TotalSocre.ToString()+" 分"))
    </MChip>
}

@if (Model.Type == PlayedGameType.WantToPlay)
{
    <MChip Label TextColor="white" XSmall Color="@(IsDark?_dataCacheService.ThemeSetting.Theme:"green")" Class="mb-2 me-2">
        <MIcon Left XSmall>mdi-book </MIcon>
        想玩
    </MChip>

}
else if (Model.Type == PlayedGameType.Playing)
{
    <MChip Label TextColor="white" XSmall Color="@(IsDark?_dataCacheService.ThemeSetting.Theme:"indigo")" Class="mb-2 me-2">
        <MIcon Left XSmall>mdi-google-controller </MIcon>
        正在玩
    </MChip>
}
else if (Model.Type == PlayedGameType.Played)
{
    <MChip Label TextColor="white" XSmall Color="@(IsDark?_dataCacheService.ThemeSetting.Theme:"cyan")" Class="mb-2 me-2">
        <MIcon Left XSmall>mdi-play-box-multiple</MIcon>
        已玩
    </MChip>
}
else if (Model.Type == PlayedGameType.Uninterested)
{
    <MChip Label TextColor="white" XSmall Color="@(IsDark?_dataCacheService.ThemeSetting.Theme:"teal")" Class="mb-2 me-2">
        <MIcon Left XSmall>mdi-thumb-down</MIcon>
        不感兴趣
    </MChip>

}
else if (Model.Type == PlayedGameType.UnPlayed)
{
    <MChip Label TextColor="white" XSmall Color="@(IsDark?_dataCacheService.ThemeSetting.Theme:"blue")" Class="mb-2 me-2">
        <MIcon Left XSmall>mdi-pin-off</MIcon>
        未玩
    </MChip>
}



@code {
    [Parameter]
    public GameRecordViewModel Model { get; set; }
    [Parameter]
    public bool IsDark { get; set; }
}
