<div class="row">
    @foreach (var item in Model.Where(s=>s.IsHidden==false))
    {
        <div class="col-6 col-md-6 col-lg-4 col-xxl-3 mt-3">
            <GameRecordViewCard Model="item" OnChanged="OnChanged" IsSmallScreen="IsSmallScreen" />
        </div>
    }
</div>
@if (Model.Any(s => s.IsHidden))
{
    <div class="mt-3">
        <TitleCollapseCard Icon="fa-unlink" Title="折叠的项目"  @bind-IsCollapsed="IsCollapsed">
            <div class="row">
                @foreach (var item in Model.Where(s=>s.IsHidden))
                {
                    <div class="col-6 col-md-6 col-lg-4 col-xxl-3 mt-3">
                        <GameRecordViewCard Model="item" OnChanged="OnChanged" IsSmallScreen="IsSmallScreen" />
                    </div>
                }
            </div>
        </TitleCollapseCard>
    </div>
}


@code {
    [Parameter]
    public List<GameRecordViewModel> Model { get; set; }
    [Parameter]
    public bool IsSmallScreen { get; set; }
    [Parameter]
    public bool IsCollapsed { get; set; } = true;

    public Task OnChanged()
    {
        StateHasChanged();
        return Task.CompletedTask;
    }

}
