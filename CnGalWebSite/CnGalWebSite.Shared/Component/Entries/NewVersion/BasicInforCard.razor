}



@if (Model.Information.Any(s => s.Modifier == "相关网站")
|| (Model.Information.Any(s => s.Modifier == "基本信息") && Model.Information.FirstOrDefault(s => s.Modifier == "基本信息").Informations.Any(s => s.DisplayName == "官网")))
{
    <div class="rounded shadow bg-opacity rounded ps-3 pe-3 pb-2 pt-2 mb-3">
        <div class="">
            <h2 class="fw-bold pb-2 m-0 font-color h5"><i class="fa fa-link"></i>&nbsp;&nbsp;相关网站</h2>
        </div>
        <div class="row">
            @if (Model.Information.Any(s => s.Modifier == "相关网站"))
            {
                @foreach (var item in Model.Information.FirstOrDefault(s => s.Modifier == "相关网站").Informations)
                {
                    @if (item.DisplayValue.Contains("bilibili.com"))
                    {
                        <BasicInforAloneTip Icon="fa-external-link-square" Text="B站：" Url="@item.DisplayValue" />
                    }
                    else if (item.DisplayValue.Contains("weibo.com"))
                    {
                        <BasicInforAloneTip Icon=" fa-weibo" Text="微博：" Url="@item.DisplayValue" />
                    }
                    else if (item.DisplayValue.Contains("youtube.com"))
                    {
                        <BasicInforAloneTip Icon="fa-youtube" Text="YouTube：" Url="@item.DisplayValue" />
                    }
                    else if (item.DisplayValue.Contains("twitter.com"))
                    {
                        <BasicInforAloneTip Icon="fa-twitter" Text="Twitter：" Url="@item.DisplayValue" />
                    }
                    else if (item.DisplayValue.Contains("facebook.com"))
                    {
                        <BasicInforAloneTip Icon="fa-facebook" Text="Facebook：" Url="@item.DisplayValue" />
                    }
                    else
                    {
                        <BasicInforAloneTip Icon=" fa-external-link-square" Text="@(item.DisplayName+"：")" Url="@item.DisplayValue" />
                    }
                }
            }

            @if (Model.Information.Any(s => s.Modifier == "基本信息"))
            {
                @if (Model.Information.FirstOrDefault(s => s.Modifier == "基本信息").Informations.Any(s => s.DisplayName == "官网"))
                {
                    var item = Model.Information.FirstOrDefault(s => s.Modifier == "基本信息").Informations.FirstOrDefault(s => s.DisplayName == "官网");
                    <BasicInforAloneTip Icon="fa-coffee" Text="官网：" Url="@item.DisplayValue" />
                }
            }
        </div>
    </div>

}
@code {
    [Parameter]
    public EventCallback<Operation> OnRevoke { get; set; }
    [Parameter]
    public long Id { get; set; }
    [Parameter]
    public bool IsNormalScreen { get; set; }
    [Parameter]
    public EntryIndexViewModel Model { get; set; }

