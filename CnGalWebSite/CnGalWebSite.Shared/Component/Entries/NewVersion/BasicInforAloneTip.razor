@inject IDataCacheService _dataCacheService


@if (string.IsNullOrWhiteSpace(Url))
{
    <span class="@Class">
        <i class="@("fa fa-fw font-color "+Icon)"></i>&nbsp; &nbsp;@Text
    </span>
}
else
{
    @if (ToolHelper.IsMaui)
    {
        <span class="@Class" style=" word-break: break-all;">
            <i class="@("fa fa-fw font-color "+Icon)"></i>&nbsp; &nbsp;@Text<a class="font-color" @onclick="OnClick">@Url</a>
        </span>
    }
    else
    {
        <span class="@Class" style=" word-break: break-all;">
            <i class="@("fa fa-fw font-color "+Icon)"></i>&nbsp; &nbsp;@Text<a href="@Url" target="_blank">@Url</a>
        </span>

    }

}

@code {
    [Parameter]
    public string Text { get; set; }
    [Parameter]
    public string Class { get; set; }
    [Parameter]
    public string Url { get; set; }
    [Parameter]
    public string Icon { get; set; }


    private async Task OnClick()
    {

        await _dataCacheService.OpenNewPage.InvokeAsync(Url);

    }
}
