
<TabLink target="_blank" Url="@Model.Link" class="a-font-color">
    <div class="div-shadow rounded  bg-opacity aticle-home-layout p-3 h-100" >
        <div class="row mb-2" style="height: 100%; align-content: center;">
            @{
                string imageStr = Model.Image;
                if (string.IsNullOrWhiteSpace(imageStr))
                {
                    //尝试匹配标题
                    if (Model.DisplayName == "萌娘百科")
                    {
                        imageStr = "_content/CnGalWebSite.Shared/images/Moegirl.png";
                    }
                    else if (Model.DisplayName == "Bangumi")
                    {
                        imageStr = "_content/CnGalWebSite.Shared/images/Bangumi.png";
                    }
                    else if (Model.DisplayName == "百度百科")
                    {
                        imageStr = "_content/CnGalWebSite.Shared/images/BaiDuWiki.png";
                    }
                    else if (Model.DisplayName == "2DFan")
                    {
                        imageStr = "_content/CnGalWebSite.Shared/images/2DFan.png";
                    }
                    else if (Model.DisplayName == "VNDB")
                    {
                        imageStr = "_content/CnGalWebSite.Shared/images/VNDB.png";
                    }
                    else if (Model.DisplayName == "App Store")
                    {
                        imageStr = "_content/CnGalWebSite.Shared/images/AppStore.png";
                    }
                    else if (Model.DisplayName == "Google Play")
                    {
                        imageStr = "_content/CnGalWebSite.Shared/images/GooglePlay.png";
                    }
                    else if (Model.DisplayName == "方块游戏")
                    {
                        imageStr = "_content/CnGalWebSite.Shared/images/CraftGame.png";
                    }
                    else if (Model.DisplayName == "DLsite")
                    {
                        imageStr = "_content/CnGalWebSite.Shared/images/DLsite.png";
                    }
                    else if (Model.DisplayName == "维基百科")
                    {
                        imageStr = "_content/CnGalWebSite.Shared/images/Wiki.png";
                    }
                    else if (Model.DisplayName == "TapTap")
                    {
                        imageStr = "_content/CnGalWebSite.Shared/images/TapTap.png";
                    }
                }

                if (string.IsNullOrWhiteSpace(imageStr))
                {
                    <div class="col-12" style="display: flex; flex-direction: column; justify-content: center;">
                        <header>
                            <h5 class="fw-bold" style=" display: inline;">@Model.DisplayName</h5>
                        </header>
                        <div class="article-home-text">
                            @Model.DisplayValue
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-3" style="display: flex; flex-direction: column; justify-content: center;">
                        <img class="img-fluid" src="@imageStr">
                    </div>
                    <div class="col-9" style="display: flex; flex-direction: column; justify-content: center;">
                        <header>
                            <h5 class="fw-bold" style=" display: inline;">@Model.DisplayName</h5>
                        </header>
                        <div class="article-home-text">
                            @Model.DisplayValue
                        </div>
                    </div>
                }
            }

        </div>
    </div>


</TabLink>

    @code {
        [Parameter]
        public RelevancesKeyValueModel Model { get; set; }
    }
