@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@inject IDataCacheService _dataCacheService

<style>
    .m-main {
        padding-bottom: 186px!important;
    }
</style>

    <MAppBar App Class="shadow-sm  bg-opacity">
        <div style=" word-break: keep-all;" class="ms-4 me-8">
            <CnGalWebSite.Shared.MasaComponent.Shared.Tips.LogoTip />
        </div>
        <MTabs Color="@_dataCacheService.ThemeSetting.Theme">
            <MTab OnClick="OnNavHomeClick">首页</MTab>
            <MTab OnClick="OnNavEntryClick">词条</MTab>
            <MTab OnClick="OnNavArticleClick">文章</MTab>
            <MTab OnClick="OnNavSquareClick">广场</MTab>
            <AuthorizeView Roles="Editor">
                <Authorized>
                    <MTab OnClick="OnTreeMapClick">数据</MTab>
                    <MTab OnClick="On7thClick">周年庆</MTab>
                </Authorized>
            </AuthorizeView>
        </MTabs>
        <MSpacer></MSpacer>

        <MTooltip Bottom>
            <ActivatorContent>
                <MButton Icon Dark Color="@_dataCacheService.ThemeSetting.Theme" Class="mr-6" OnClick="OnNavSearchClick">
                    <MIcon>mdi-magnify</MIcon>
                </MButton>
            </ActivatorContent>
            <ChildContent>
                <span>搜索</span>
            </ChildContent>
        </MTooltip>

        <CnGalWebSite.Shared.MasaComponent.PC.Layout.LoginButton />
    </MAppBar>

    <MMain>
        <MContainer>
            <CnGalWebSite.Shared.MasaComponent.Shared.Tips.ContentRootTip>
                <div class="mt-3 mb-3">
                    @Body
                </div>
            </CnGalWebSite.Shared.MasaComponent.Shared.Tips.ContentRootTip>

        </MContainer>
    </MMain>

    <MFooter App Padless Absolute Class="shadow-sm  bg-opacity">
        <CnGalWebSite.Shared.MasaComponent.Shared.Tips.MainFooterTip/>
    </MFooter>

@code {
    public Task OnNavHomeClick()
    {
        NavigationManager.NavigateTo("/");
        return Task.CompletedTask;
    }

    public Task OnNavEntryClick()
    {
        NavigationManager.NavigateTo("/entries/home");
        return Task.CompletedTask;
    }

    public Task OnNavArticleClick()
    {
        NavigationManager.NavigateTo("/articles/home");
        return Task.CompletedTask;
    }
    public Task OnNavSquareClick()
    {
        NavigationManager.NavigateTo("/square");
        return Task.CompletedTask;
    }
    public Task OnNavSearchClick()
    {
        NavigationManager.NavigateTo("/search");
        return Task.CompletedTask;
    }
    public Task On7thClick()
    {
        NavigationManager.NavigateTo("/7th");
        return Task.CompletedTask;
    }
    public Task OnTreeMapClick()
    {
        NavigationManager.NavigateTo("/treemap");
        return Task.CompletedTask;
    }
}
