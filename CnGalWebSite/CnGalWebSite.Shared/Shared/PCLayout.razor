@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<MApp>
    <MAppBar App Color="white">
        <div style=" word-break: keep-all;" class="ms-4 me-8">
            <CnGalWebSite.Shared.MasaComponent.Shared.Tips.LogoTip />
        </div>
        <MTabs Color="pink lighten-3">
            <MTab OnClick="OnNavHomeClick">首页</MTab>
            <MTab OnClick="OnNavEntryClick">词条</MTab>
            <MTab OnClick="OnNavArticleClick">文章</MTab>
            <MTab>广场</MTab>
        </MTabs>
        <MSpacer></MSpacer>

        <CnGalWebSite.Shared.MasaComponent.Shared.Buttons.SearchButton Class="mr-6"/>
        <CnGalWebSite.Shared.MasaComponent.PC.Layout.LoginButton />
    </MAppBar>

    <MMain>
        <MContainer>
            <div class="mt-3 mb-3">
                @Body
            </div>

        </MContainer>
    </MMain>

    <MFooter App Padless Absolute Color="white">
        <CnGalWebSite.Shared.MasaComponent.Shared.Tips.MainFooterTip />
    </MFooter>
</MApp>

@code {
    public Task OnNavHomeClick()
    {
        NavigationManager.NavigateTo("/");
        return Task.CompletedTask;
    }

    public Task OnNavEntryClick()
    {
        NavigationManager.NavigateTo("/entries/home");
        return Task.CompletedTask;
    }

    public Task OnNavArticleClick()
    {
        NavigationManager.NavigateTo("/articles/home");
        return Task.CompletedTask;
    }
}
